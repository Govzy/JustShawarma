<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kingbell.justshawarma" >
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:name=".ApplicationMenu"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DeliveryInfo"
            android:label="@string/title_activity_checkout" >
        </activity>
        <activity
            android:name=".AboutUsActivity"
            android:label="@string/title_activity_about_us" >
        </activity>
        <activity
            android:name=".ItemChooserActivity"
            android:label="@string/title_activity_item_chooser" >
        </activity>
        <activity
            android:name=".InviteActivity"
            android:label="@string/title_activity_invite" >
        </activity>
        <activity
            android:name=".MenuListActivity"
            android:label="@string/title_activity_menu_list" >
        </activity>
        <activity
            android:name=".MenuDetailActivity"
            android:label="@string/title_activity_menu_detail" >
        </activity>
    </application>

</manifest>
