<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.kingbell.justshawarma.DeliveryInfo"
    android:weightSum="1">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Please Enter A Valid Name"
        android:id="@+id/textViewNameValidation" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Name*"
        android:inputType="textPersonName|textCapWords"
        android:capitalize="words"
        android:id="@+id/editTextName"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Enter A Valid Email"
        android:id="@+id/textViewEmailValidation" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email*"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editEmail" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Enter A Valid Phone Number"
        android:id="@+id/textViewPhoneValidation" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+91"
            android:enabled="false"
            android:id="@+id/editDefaultCode" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone Number*"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/editPhone"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Enter A Valid Address"
        android:id="@+id/textViewAddressValidation" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Address 1*"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editAddress1" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Enter A Valid Area"
        android:id="@+id/textViewAreaValidation" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Area*"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextAddress2" />
    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Banglore"
        android:enabled="false"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/editTextCity" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" Enter A Valid Zipcode"
        android:id="@+id/textViewZipValidation" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Zipcode*"
        android:ems="10"
        android:id="@+id/editZipCode" />
    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Delivery Instructions"
        android:ems="10"
        android:id="@+id/editTextComments" />
    <View
        android:layout_width="1dp"
        android:layout_height="18dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/checkOutButton"
        android:layout_gravity="center_horizontal" />

</LinearLayout>
</ScrollView>
