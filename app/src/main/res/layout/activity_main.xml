<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:orientation="vertical"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@mipmap/jslogo"
            android:layout_weight="0.05"
            android:layout_gravity="center_horizontal" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/jBrown"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Is this Order for Delivery or Pickup ?"
            android:id="@+id/deliveryPickupText"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.05" />

        <Button
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="Delivery"
            android:layout_gravity="center_horizontal"
            android:id="@+id/deliveryButton"
            android:onClick="doDelivery"/>

        <Button
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:text="Pick Up"
            android:layout_gravity="center_horizontal"
            android:id="@+id/pickUpButton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/callInfo"
            android:textColor="@android:color/holo_blue_dark"
            android:id="@+id/callText"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_gravity="center_horizontal" />


</LinearLayout>

